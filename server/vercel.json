{
    "version": 2,
    "builds": [
        {
            "src": "server/index.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "server/controllers/**",
                    "server/models/**",
                    "server/public/**",
                    "server/routes/**",
                    "server/*.js"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "server/public/$1"
        },
        {
            "src": "/",
            "dest": "server/index.js"
        }
    ]
}