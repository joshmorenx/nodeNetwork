{
    "builds": [
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "client/dist"
            }
        },
        {
            "src": "server/app.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server/app.js"
        },
        {
            "src": "/logout",
            "dest": "/server/app.js"
        },
        {
            "src": "/register",
            "dest": "/server/app.js"
        },
        {
            "src": "/",
            "dest": "/server/app.js"
        },
        {
            "src": "/(.*)",
            "dest": "/client/dist/$1"
        }
    ]
}